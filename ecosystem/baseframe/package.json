{
  "name": "@cocso-ui/baseframe",
  "version": "1.0.0",
  "description": "Clean and simple design token management tool specialized in CSS Variables generation",
  "main": "lib/index.js",
  "module": "lib/index.js",
  "type": "module",
  "private": false,
  "files": [
    "lib/**/*",
    "README.md"
  ],
  "bin": {
    "baseframe": "lib/index.js"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "bun build ./src/index.ts --outdir=lib --target=node --format=esm",
    "build:node": "bun build ./src/index.ts --outdir=lib --target=node --format=esm",
    "prepublishOnly": "bun run build",
    "test": "bun test"
  },
  "keywords": [
    "design-tokens",
    "cli",
    "css-variables",
    "figma",
    "typescript"
  ],
  "dependencies": {
    "globby": "^14.1.0",
    "yaml": "^2.8.0",
    "postcss": "^8.4.35",
    "autoprefixer": "^10.4.16",
    "cssnano": "^7"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.8.3"
  }
}
