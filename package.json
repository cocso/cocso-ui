{
  "name": "cocso-ui",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:storybook": "turbo run build:storybook --filter=@cocso-ui/storybook",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "turbo run build && changeset publish",
    "release:ci": "turbo run build && changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@changesets/cli": "^2.29.6",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.8.3"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "bun@1.2.18",
  "workspaces": [
    "apps/**",
    "packages/**",
    "docs/**"
  ]
}
