{
  "name": "@cocso-ui/react",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cocso/cocso-ui.git",
    "directory": "packages/react"
  },
  "scripts": {
    "build": "rm -rf lib && bun run build.js && bun x tsc",
    "dev": "bun run build.js --watch"
  },
  "type": "module",
  "main": "./lib/index.cjs",
  "module": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js",
      "require": "./lib/index.cjs"
    }
  },
  "files": [
    "lib"
  ],
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3"
  },
  "peerDependencies": {
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19"
  },
  "devDependencies": {
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "esbuild": "^0.24.0",
    "typescript": "^5.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}